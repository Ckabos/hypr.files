{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "control-center-margin-left": 5,
  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 560,
  "notification-window-width": 620,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "mpris",
    "backlight",
    "volume",
    "title",
    "dnd",
    "notifications",
    "buttons-grid"
  ],
  "widget-config": {
    "mpris": {
      "image-size": 140,
      "image-radius": 16
    },
    "volume": {
      "label": "󰕾"             /* volumen */
    },
    "backlight": {
      "label": "󰃟"             /* brillo */
    },
    "title": {
      "text": "󰂚 :: Notifications",  /* campana */
      "clear-all-button": true,
      "button-text": "󰅖"          /* cerrar */
    },
    "dnd": {
      "text": "󰖀 Do Not Disturb"   /* no molestar */
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰔏",            /* redshift */
          "command": "hyprshade toggle redshift"
        },
        {
          "label": "󰌵",            /* dim */
          "command": "hyprshade toggle dim"
        },
        {
          "label": "󰊠",            /* grayscale */
          "command": "hyprshade toggle grayscale"
        },
        {
          "label": "󰏘",            /* vibrance */
          "command": "hyprshade toggle vibrance"
        },
        {
          "label": "󰌁",            /* invert */
          "command": "hyprshade toggle invert"
        }
      ]
    }
  }
}
